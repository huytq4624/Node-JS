    <div class="row align-items-center bg-light py-3 px-xl-5 d-none d-lg-flex">
        <div class="col-lg-4">
            <a href="/client" class="text-decoration-none">
        
                <img src="/user/img/logo.png"alt="no photo" width="150px">
            </a>
        </div>
        <div class="col-lg-4 col-8 text-center">
            <form action="">
                <h1>HUYTQ SHOP</h1>
            </form>
            
        </div>
        <div class="col-lg-4 col-6 text-right">
            <p class="m-0">Tư Vấn & Chăm Sốc Khách Hàng</p>
            <h5 class="m-0">+012 345 6789</h5>
        </div>
    </div>
</div>
<hr>
<div class="col-md-6 offset-md-3">
    <span class="anchor" id="formLogin"></span>

    <!-- form card login with validation feedback -->
    <div class="card card-outline-secondary">
        <div class="card-header">
            <h3 class="mb-0">ĐĂNG NHẬP</h3>
        </div>
        <div class="card-body">
            <form class="form" action="/client/login" role="form" autocomplete="off" id="loginForm" novalidate="" method="POST">
                <div class="form-group">
                    <label for="uname1">Tên đăng nhập</label>

                    <input type="text" class="form-control" name="username" id="uname1"
                           placeholder="Nhập vào tên đăng nhập">
                           <% if (typeof error_username !== 'undefined') { %>
                            <span class="error-message" style="color: red">
                              <%= error_username %>
                            </span>
                          <% } %>
                </div>
                <div class="form-group">
                    <label>Mật khẩu</label>
                    <input type="password" class="form-control" id="pwd1" autocomplete="new-password"
                           placeholder="Nhập vào mật khẩu" name="password">
                           <% if (typeof error_password !== 'undefined') { %>
                            <span class="error-message" style="color: red">
                              <%= error_password %>
                            </span>
                          <% } %>
                </div>
                <button type="submit" class="btn btn-primary btn-lg float-left btn-block" id="btnLogin" name="dangnhap">
                    Đăng nhập
                </button>

            </form>
        </div>
        <!--/card-body-->
    </div>
    <!-- /form card login -->

</div>