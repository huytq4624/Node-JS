<!doctype html>
<html lang="en">

<head>
    <title>ADMIN</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
</head>
<style>
    table {
        text-align: center;
    }
</style>

<body>
    <header>
        <!-- place navbar here -->
        <%- include('../layout/styles.ejs') %>
        <%- include('../layout/header.ejs') %>
        <%- include('../layout/sidebar.ejs') %>
    </header>
    <main>
        <section class="content">
            <div class="content-wrapper">
                <!-- /.row -->
                <div class="">
                    <div class="col-12">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h1 class="card-title">Danh Sách Danh Mục</h1><br>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <form action="#" method="post">
                                <div class="card-tools">
                                    <div class="input-group input-group-sm" style="width: 550px;">
                                        <input type="text" name="table_search" class="form-control"
                                            placeholder="Tìm Kiếm Hàng Hóa">

                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-primary">Tìm
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form><br>
                            <form action="" method="post" enctype="multipart/form-data">
                                <table class="table table-hover text-nowrap">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% categories.forEach(element => {
                                            %>
                                        <tr>
                                            <td><%=element.category_id %></td>
                                            <td><%=element.name %></td>
                                            <td>
                                                <a href="/admin/categories/edit/<%=element.category_id %>">Edit</a>
                                                <a href="/admin/categories/delete/<%=element.category_id %>">Delete</a>
                            
                                            </td>
                                        </tr>
                            
                                        <%
                                        }); %>
                            
                                    </tbody>
                                </table>
                            </form>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <!-- /.row -->
            <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous">
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous">
    </script>
</body>

</html>